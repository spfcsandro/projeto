<?xml version="1.0" encoding="UTF-8"?>
<faces-config xmlns="http://java.sun.com/xml/ns/javaee" 
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
          http://java.sun.com/xml/ns/javaee/web-facesconfig_2_1.xsd"
          version="2.1">
	<application>
		<el-resolver>
            org.springframework.web.jsf.el.SpringBeanFacesELResolver
        </el-resolver>
  	</application>

	<application>
		<message-bundle>messages_core</message-bundle>
	</application>

  	<converter>  
    	<converter-id>EmptyToNullConverter</converter-id>   
    	<converter-class>com.util.EmptyToNullConverter</converter-class>   
	</converter>   
	
	  <navigation-rule>
        <navigation-case>
            <from-outcome>index</from-outcome>
            <to-view-id>/index.jsf</to-view-id>
            <redirect />
        </navigation-case>
    </navigation-rule>
 
    <navigation-rule>
        <navigation-case>
            <from-outcome>successfulPage</from-outcome>
            <to-view-id>/pages/index.jsf</to-view-id>
            <redirect />
        </navigation-case>
    </navigation-rule>
 
    <navigation-rule>
        <navigation-case>
            <from-outcome>userPage</from-outcome>
            <to-view-id>/pages/user/userPage.jsf</to-view-id>
            <redirect />
        </navigation-case>
    </navigation-rule>
 
    <navigation-rule>
        <navigation-case>
            <from-outcome>adminPage</from-outcome>
            <to-view-id>/pages/admin/adminPage.jsf</to-view-id>
            <redirect />
        </navigation-case>
    </navigation-rule>
</faces-config>
